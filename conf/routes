# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Mill
GET     /                                   controllers.MillController.mill
GET     /board                              controllers.MillController.mill
GET     /start                              controllers.MillController.startGame
GET     /rules                              controllers.MillController.rules
GET     /player                             controllers.MillController.playerOnTurnAPI
GET     /login                              controllers.MillController.login
#+nocsrf
#POST    /turn                               controllers.MillController.performTurn
+nocsrf
POST    /checkMill                          controllers.MillController.checkMill
+nocsrf
POST    /caseOfMill                         controllers.MillController.caseOfMill
+nocsrf
POST    /getField                           controllers.MillController.getField

GET     /websocket                          controllers.MillController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
