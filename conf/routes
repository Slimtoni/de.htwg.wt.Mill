# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Mill
GET     /                                   controllers.MillController.mill
GET     /board                              controllers.MillController.mill
GET     /start                              controllers.MillController.startGame
GET     /rules                              controllers.MillController.rules
GET     /player                             controllers.MillController.playerOnTurnAPI
GET     /changePlayer                       controllers.MillController.changePlayer
+nocsrf
POST    /turn                               controllers.MillController.performTurn

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
